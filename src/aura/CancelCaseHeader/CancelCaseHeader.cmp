<aura:component description="CancelCaseHeader">
    <!-- Attributes -->
    <aura:attribute name="currentPage" type="Integer" />

    <!-- Events -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-border_bottom slds-p-top_medium slds-p-bottom_small slds-m-left_medium slds-m-right_medium">
        <span class="slds-text-heading_medium">
            Submit a Cancel Case (Page {!v.currentPage} of 3)
        </span>
    </div>
</aura:component>